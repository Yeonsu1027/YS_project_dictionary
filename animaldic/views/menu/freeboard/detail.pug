extends ../../layout

block content
  link(rel="stylesheet", href="/css/free_detail.css")
  script(src="/js/detail.js")
  div.notice_box
    h1.notice_title #{bd.title}
    p.notice_dateauth 작성자: #{bd.author}
    div.img_box
        if bd.image_name
            img.notice_img(src=`/uploads/${bd.image_name}`, width="200px", height="200px")
    section.content 
      pre.notice_content #{bd.content}
    div.btn_box
      if user && user.m_username === bd.author
        input.btn.update(type="button" data-num=`${bd.num}` value="수정") 
        input.btn.delete(type="button" data-num=`${bd.num}` value="삭제")
      input.btn.btn_list(type="button" value="리스트로")
